<link rel="stylesheet" href="/css/admin.css">
<div>
  <div class="cont"> 
    <div>
      <button class="view" onclick="location.href='/api/admin/view'">Vista de todos los productos</button>
    <form class="container-form" action="/api/products" method="POST" id="form">
      <h2>Registrar un nuevo producto</h2>
      <div>
	<input class="entry" type="text" name="name_Person" placeholder="Nombre del proveedor" required="" autofocus="">
	<input class="entry" type="text" name="name" placeholder="Nombre del producto" required="">
	<input class="entry" type="Number" name="price" placeholder="Precio" required="">
	<input class="entry" type="text" name="unit" list="units" placeholder="Medida de unidad" required="">
	<datalist id="units">
	  <option value="Unidad"></option>
	  <option value="Docena"></option>
	</datalist>
	  <input class="entry" type="text" name="category" list="categorys" placeholder="Categoria" required="">
	  <datalist id="categorys">
	    <option value="Bebidas"></option>
	    <option value="Aperitivo"></option>
	    <option value="Frutas y verduras"></option>
	    <option value="Electrodomestico"></option>
	  </datalist>
	  <input class="entry" type="Number" name="amount" placeholder="Cantidad de productos" required="">
      </div>
      <div>
	<button class="button-save">Guardar</button>
      </div>
    </form>

    </div>
  </div>
</div>

