<link rel="stylesheet" href="/css/login-singin.css">
<div class="container">
	<div class="sub-container">
	{{#if singInMessage}}
	<div class="alert">
		<p>{{singInMessage}}</p>
	</div>
	{{/if}}
	{{#if alert}}
		<div class="alert">
			<p>{{alert}}</p>
		</div>
	{{/if}}
		<form class="animate__animated animate__fadeInUp" action="/login" method="POST">
			<h2>Iniciar Sesion</h2>
			<div>
				<input type="text" name="userName" placeholder="Nombre de suario" autofocus="">
			</div>
			<div class="wrapp-input">
				<input id="password" type="password" name="password" placeholder="Contraceña">
					<span id="reveal">
						<i id="eye" class="fas fa-eye"></i>
					</span>
			</div>
			<div>
				<button class="submit">Iniciar sesion</button>
			</div>
			<a href="/singin">¿Aun no tienes una cuenta?</a>
		</form>
	</div>
</div>
<script src="/js/revealPassword.js"></script>
