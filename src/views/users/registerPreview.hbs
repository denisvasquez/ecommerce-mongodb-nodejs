<style>
	.container {
		margin: 0 auto;
		margin-top: 80px;
	}
	.sub-container {
		display: flex;
		justify-content: space-evenly;
		flex-wrap: wrap;
	}
	.text	{
		text-align: center;
		color: gray;
		margin: 10px;
	}
	.card {
		background: ghostwhite;
		box-sizing: border-box;
		width: 300px;
		padding: 15px;
		border-radius: 4px;
		margin: 20px;
	}
	.card-title {
		display: flex;
		justify-content: space-between;
	}
	.btn-remove {
		padding: 10px 15px;
		border: none;
		border-radius: 4px;
		background: transparent;
		border: 1px solid red;
		color: red;
		transition: 0.2s;
	}
	.btn-remove:hover {
		cursor: pointer;
		color: white;
		background: red;
		box-shadow: 0 0 5px red;
		transition-delay: 0.2s;
	}
	.btn-finish {
		letter-spacing: 2px;
		border-radius: 5px;
		border: none;
		padding: 10px 20px;
		margin: 15px;
		background: transparent;
		color: #0089ff;
		border: 1px solid #0089ff;
		transition: 0.2s;
	}
	.btn-finish:hover {
		cursor: pointer;
		background: #0089ff;
		color: white;
		transition-delay: 0.2s;
		box-shadow: 0 0 5px #0089ff;
	}
</style>
<div class="container">
	{{#if result}}
		<div>
			<button class="btn-finish" onclick="location.href='/register/buy'">
				Terminar y visualizar factura
			</button>
		</div>
	 	<div class="sub-container">
		{{#each result}}
		 		<div class="card">
		 			<div class="card-title">
		 				<h3>{{product}}</h3>
		 				<p>{{timeago timeAgo}}</p>
		 			</div>
		 			<div class="card-body">
		 				<p>Cantidad: {{amountProducts}}</p>
		 				<p>Pago: {{mountTotal}}</p>
		 			</div>
		 			<button class="btn-remove" onclick="location.href='/register/delete/{{id}}'">
		 				<i class="fas fa-trash"></i>
		 			</button>
		 		</div>
		{{/each}}
	 	</div>
	{{else}}
		<div class="text">
			<h1>No tienes ninguna compra pendiente</h1>
	 	</div>
	{{/if}}
</div>
